rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PERMISSÕES TEMPORÁRIAS PARA DESENVOLVIMENTO
    // ATENÇÃO: Estas regras permitem acesso total - NÃO usar em produção!
    
    // Permitir acesso a todas as coleções durante desenvolvimento
    match /{document=**} {
      allow read, write: if true;
    }
  }
} 